<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/action_bar_bg">

    <LinearLayout
        android:id="@+id/chuanciTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/chuanciSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chuanciCurrentRoleStatus"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:text="排药未完成"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/chuanciRefreshLastTime"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="#ffffff"
                android:text="18:00:00"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chuanciCallBt"
                android:layout_width="0dp"
                android:text="呼叫"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/chuanciRefresh"
                android:layout_width="0dp"
                android:text="刷新"
                android:gravity="center"
                android:background="@drawable/ic_refresh"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/chuanciMore"
                android:background="@drawable/action_more"
                android:layout_width="0dp"
                android:text="更多"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
