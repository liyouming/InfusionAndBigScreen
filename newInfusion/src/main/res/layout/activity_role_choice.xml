<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingTop="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="30dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <Button
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/fun_paiyao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fugao_light_bg"
        android:text="排  药"
        android:textScaleX="1.2"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_weight="1"/>

    <Button
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/fun_peiye"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fugao_blue_bg"
        android:text="配  液"
        android:textScaleX="1.2"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_weight="1"/>

    <Button
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/fun_chuanci"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fugao_light_bg"
        android:text="穿  刺"
        android:textScaleX="1.2"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_weight="1"/>

    <Button
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/fun_shuye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fugao_light_bg"
        android:text="巡视 / 输液"
        android:textScaleX="1.2"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_weight="1"/>
    <Button
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/zhong_shuye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fugao_light_bg"
        android:text="重/急 输液"
        android:textScaleX="1.2"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_weight="1"/>

</LinearLayout>
