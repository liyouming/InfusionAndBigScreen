<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/dialog_frame"
    android:orientation="vertical">

  <TextView
      android:id="@+id/dialog_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="left|center_vertical"
      android:padding="16dp"
      android:text="标题"
      android:textColor="@color/item_theme_color"
      android:textSize="20sp"
      android:textStyle="normal"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="@color/item_theme_color"/>

  <ListView
      android:id="@+id/dialog_listview"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:cacheColorHint="#0000"
      android:fadingEdge="none"
      android:listSelector="@android:color/transparent">
  </ListView>

  <View
      android:id="@+id/dialog_divider"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/item_divider_color"/>

  <TextView
      android:id="@+id/dialog_cancle_btn"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:background="@drawable/view_bg_default"
      android:gravity="center"
      android:text="是"
      android:textColor="#f222"
      android:textSize="16.0dip"/>

</LinearLayout>