<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="80dip"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:background="@drawable/card_selector"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_weight="1.0"
      android:duplicateParentState="true"
      android:gravity="center_vertical"
      android:orientation="vertical"
      android:paddingLeft="10dip">

    <TextView
        android:id="@+id/index_transfusion_bedno_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="20sp"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/index_transufsion_last_arround_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/index_transfusion_bedno_name"
        android:text="最近一次巡视的时间"
        android:gravity="center"
        android:visibility="visible"/>
  </RelativeLayout>

  <TextView
      android:id="@+id/arround_time"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:gravity="center"
      android:paddingRight="30sp"
      android:text="已执行时间"
      android:textColor="@color/blue"
      android:textSize="24sp"
      android:visibility="visible"/>

  <ImageView
      android:id="@+id/chevron"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/uc_arrow_right"
      android:duplicateParentState="true"/>

</LinearLayout>
