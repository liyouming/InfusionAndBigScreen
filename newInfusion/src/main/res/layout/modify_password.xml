<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/action_bar_bg"
        >
        <TextView
            android:text="修改密码"
            android:layout_marginLeft="10dp"
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/customer_actionbar_back"
            android:gravity="center"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/login_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:src="@drawable/ic_launcher"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/usernametext"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="8.0dip"
                android:text="工   号："
                android:textColor="#ff666666"
                android:textSize="18.0dip"/>

            <EditText
                android:id="@+id/username"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#00000000"
                android:maxLength="50"
                android:paddingLeft="4.0dip"
                android:paddingRight="10.0dip"
                android:singleLine="true"
                android:text=""
                android:textSize="18.0dip"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.6700001dip"
            android:layout_marginTop="1.5dip"
            android:background="#ffcccccc"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/passwordText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="8.0dip"
                android:text="原密码："
                android:textColor="#ff666666"
                android:textSize="18.0dip"/>

            <EditText
                android:id="@+id/oldassword"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#00000000"
                android:hint=""
                android:maxLength="16"
                android:paddingLeft="4.0dip"
                android:paddingRight="10.0dip"
                android:password="true"
                android:singleLine="true"
                android:textColor="#ff333333"
                android:textColorHint="#ffbbbbbb"
                android:textSize="18.0dip"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/passwordText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="8.0dip"
                android:text="新密码："
                android:textColor="#ff666666"
                android:textSize="18.0dip"/>

            <EditText
                android:id="@+id/newPassword"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#00000000"
                android:hint=""
                android:maxLength="16"
                android:paddingLeft="4.0dip"
                android:paddingRight="10.0dip"
                android:password="true"
                android:singleLine="true"
                android:textColor="#ff333333"
                android:textColorHint="#ffbbbbbb"
                android:textSize="18.0dip"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/passwordText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="8.0dip"
                android:text="新密码确认："
                android:textColor="#ff666666"
                android:textSize="18.0dip"/>

            <EditText
                android:id="@+id/confirmNewPassword"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#00000000"
                android:hint=""
                android:maxLength="16"
                android:paddingLeft="4.0dip"
                android:paddingRight="10.0dip"
                android:password="true"
                android:singleLine="true"
                android:textColor="#ff333333"
                android:textColorHint="#ffbbbbbb"
                android:textSize="18.0dip"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/excute"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_textview"
                android:layout_width="130.0dip"
                android:layout_height="47.0dip"
                android:layout_weight="1.0"
                android:background="@color/action_bar_bg"
                android:gravity="center"
                android:text="确          定"
                android:textColor="@color/white"
                android:textSize="18.0dip"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>